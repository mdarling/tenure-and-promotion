<h1>Dossier Sections</h1>
   <ul class="list-group">
    <% @categories.each do |category| %>
      <% if !(current_user.role =~ /andida/ && (category.name =~ /College|Department|Dean/)) %>
       <li class = "list-group-item">
         <%=link_to category.name, category, :class => "btn btn-danger" %>
           <%= link_to '<i class="fa fa-trash-o"></i>Delete'.html_safe, category, method: :delete, data: { confirm: 'Are you sure?' }, :class => "badge" %>
       </li>
      <% end %>
    <% end %>
   </ul>
<br>
<%= link_to 'Make your own section', new_category_path, class: 'btn btn-success' %>
