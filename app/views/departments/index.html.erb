<p id="notice"><%= notice %></p>

<h1>Listing Departments</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>College</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @departments.each do |department| %>
      <tr>
        <td><%= department.name %></td>
        <td><%= department.college.name %></td>
        <td><%= link_to 'Dossier Sections', department_path(department), class: 'badge' %></td>
        <td><%= link_to 'Edit', edit_department_path(department), class: 'badge alert-warning' %></td>
        <td><%= link_to raw('<em class="fa fa-trash-o"></em> Delete'), department, method: :delete, data: { confirm: 'Are you sure?' }, class: 'badge alert-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Department', new_department_path, class: 'btn btn-primary' %>
