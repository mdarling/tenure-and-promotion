<p id="notice"><%= notice %></p>

<h1>Department: <%= @department.name %></h1>

<p>
  <strong>College:</strong>
  <%= @department.college.name %>
</p>
<h1>Dossier Sections</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody id="department_sections">
    <%= render @department.department_sections %>
  </tbody>
</table>

<p>
  <%= link_to 'Done', departments_path, class: 'btn btn-success' %>
</p>
