<h1>Tenure Candidates</h1>

<table>
  <thead>
    <tr>
      <th>NetID</th>
      <th>Name</th>
      <th>Role</th>
      <th>Department</th>
      <!--th colspan="3"--></th>
    </tr>
  </thead>

  <tbody>
    <%= current_user.id %>
    <% @users.each do |user| %>
      <tr>
          <td><%= user.netid %></td>
          <td><%= user.name %></td>
          <td><%= user.role %></td>
          <td><%= user.department %></td>
          <td><%# link_to 'Show', user %></td>
          <td><%= link_to 'Edit User', edit_user_path(user) %></td>
          <td><%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

