<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "NetID" %><br>
    <%= f.text_field :netid, :value => session[:cas_user] %> <%#, :readonly => true %>
  </div>
  <div class="field">
    <%= f.label "Name" %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label "Role" %><br>
    <%= f.select :role, options_for_select(@roles) %>
  </div>
  <div class="field">
    <%= f.label "Department" %><br>
    <% if super_user %>
      <%= f.select :department,  options_for_select(@departments) %>
    <% else %>
      <%= f.text_field :department, :value => current_user.department, :readonly => true %><%#, options_for_select(@departments) %>
    <% end %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
