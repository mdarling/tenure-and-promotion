<p id="notice"><%= notice %></p>

<h1>Listing Department Sections</h1>

<table>
  <thead>
    <tr>
      <th>Department</th>
      <th>Section</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @department_sections.each do |department_section| %>
      <tr>
        <td><%= department_section.department %></td>
        <td><%= department_section.section %></td>
        <td><%= link_to 'Show', department_section %></td>
        <td><%= link_to 'Edit', edit_department_section_path(department_section) %></td>
        <td><%= link_to 'Destroy', department_section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

