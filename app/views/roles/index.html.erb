<p id="notice"><%= notice %></p>

<h1>User Roles</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @roles.each do |role| %>
      <tr>
        <td><%= role.name %></td>
        <td><%= role.level.humanize %></td>
        <td><%= link_to 'Edit', edit_role_path(role), class: 'badge alert-warning' %></td>
        <td><%= link_to raw('<em class="fa fa-trash-o"></em> Delete'), role, method: :delete, data: { confirm: 'Are you sure?' }, class: 'badge alert-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Role', new_role_path, class: 'btn btn-primary' %>
