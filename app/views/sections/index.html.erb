<p id="notice"><%= notice %></p>

<h2>Default Dossier Sections</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>In PDF?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><%= section.name %></td>
        <td><%= section.level %></td>
        <td><%= section.pdf %></td>
        <td><%= link_to 'Show', section %></td>
        <td><%= link_to 'Edit', edit_section_path(section) %></td>
        <td><%= link_to 'Destroy', section, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path, class: 'btn btn-primary' %>
