<p id="notice"><%= notice %></p>

<h2>Default Dossier Sections</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Level</th>
      <th>In PDF?</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sections.each do |section| %>
      <tr>
        <td><strong><%= section.name %></strong></td>
        <td><%= section.level %></td>
        <td><em><%= section.pdf? %></em></td>
        <td><%= link_to 'Edit', edit_section_path(section), class: 'badge alert-warning' %></td>
        <td><%= link_to raw('<em class="fa fa-trash-o"></em> Delete'), section, method: :delete, data: { confirm: 'Are you sure?' }, class: 'badge alert-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Section', new_section_path, class: 'btn btn-primary' %>
